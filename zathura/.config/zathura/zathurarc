### Settings from original zathurarc ###
set font "monospace normal 21"

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#f0ecdf'
set completion-bg rgba(24,17,9,0.75)

# Command line completion group elements
set completion-group-fg '#876039'
set completion-group-bg rgba(24,17,9,0.75)

# Current command line completion element
set completion-highlight-fg '#181109'
set completion-highlight-bg '#f0ecdf'

# Default foreground/background color
set default-bg rgba(24,17,9,0.75)

# Input bar
set inputbar-fg '#f0ecdf'
set inputbar-bg rgba(24,17,9,0.75)

# Notification
set notification-fg '#f0ecdf'
set notification-bg rgba(24,17,9,0.75)

# Error notification
set notification-error-fg '#f0ecdf'
set notification-error-bg '#725F4B'

# Warning notification
set notification-warning-fg '#f0ecdf'
set notification-warning-bg '#725F4B'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#f0ecdf'
set statusbar-bg rgba(24,17,9,0.75)

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#876039'
set highlight-active-color '#876039'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#f0ecdf'

# 'Loading...' text
set render-loading-fg '#f0ecdf'
set render-loading-bg rgba(24,17,9,0.75)

# Index mode
set index-fg '#f0ecdf'
set index-bg rgba(24,17,9,0.75)

# Selected element in index mode
set index-active-fg '#181109'
set index-active-bg '#f0ecdf'